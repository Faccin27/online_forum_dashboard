<div class="container">
  <div class="add-flashcard-con">
    <button id="add-flashcard">Adicionar Produto</button>
  </div>

  <div id="card-con">
    <div class="card-list-container">
      {{#each listaPosts}}
      <div class="card" data-id="{{this.id}}">
        <p class="question-div">{{this.titulo}}</p>
        <div class="answer-container hide">
          <p class="answer-div-descricao">{{this.descricao}}</p>
          <p class="answer-div">Id do produto: {{this.id}}</p>
          <p class="answer-div-lastedit"> {{this.lastEdited}}</p>
          <p class="answer-div-autor"> {{this.autor}}</p>
        </div>
        <a href="/produtos/?post={{this.id}}" class="show-more-btn">Show More</a>
        <div class="buttons-con">
          <div class="favorite-container">
            <button class="favorite"><i class="fa-regular fa-heart"></i> {{this.favoritadoPor.length}}</button>
          </div>
          <button class="edit"><i class="fa-solid fa-pen-to-square"></i></button>
          <button class="delete"><i class="fa-solid fa-trash-can"></i></button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

<div class="question-container hide" id="add-question-card">
  <h2>Adicionar produto</h2>
  <div class="wrapper">
    <i class="fa-solid fa-xmark" id="close-btn"></i>
  </div>
    <label for="question">Produto</label>
    <textarea class="input" id="question" placeholder="Digite o nome do produto aqui" rows="2"></textarea>
    <label for="answer">Descrição</label>
    <textarea class="input" id="answer" rows="4" placeholder="Digite a descrição do produto aqui"></textarea>
    <button id="save-btn">Salvar</button>
    <div id="error" class="hide">Por favor, preencha todos os campos.</div>
</div>

{{#if post}}
<div id="productModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2 id="modalTitle">{{post.titulo}}</h2>
    <p id="modalAuthor">{{post.autor}}</p>
    <p id="modalDateTime">DATA</p>
    <p id="modalDescription">{{post.conteudo}}</p>
  </div>
</div>



{{/if}}